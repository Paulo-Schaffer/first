
@{
    /**/

    ViewBag.Title = "Index";
}

@if (Session["usuarioLogadoTipoFuncionario"].ToString() == "Funcionario")
{
    <h1>@Session["usuarioLogadoFuncionario"].ToString()</h1>
}
else if (Session["usuarioLogadoTipoFuncionario"].ToString() == "Gerente")
{
}
<div class="row">
    <div class="col-12">

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <h1>Financial Report System Dashboard</h1>
        <script>
            function typeWriter(elemento) {
                const textoArray = elemento.innerHTML.split('');
                elemento.innerHTML = '';
                for (let i = 0; i < textoArray.length; i++) {
                    setTimeout(() => elemento.innerHTML += textoArray[i], 120 * i);
                }
            }

            const titulo = document.querySelector('h1');
            typeWriter(titulo);
        </script>

    </div>
</div>
<hr />
<br />
<div class="row">
    <div class="col-5">
        <center>
            <H3>Contas Receber/Pagar</H3>
            <br />
        </center>
        <div class="row">
            <div class="col-lg-6">
                <div class="card bg-c-green text-white widget-visitor-card">
                    <div class="card-block-small text-center">
                        <h6>Contas Receber</h6>
                        <h5>R$@ViewBag.ContasReceber</h5>
                        <i class="icofont icofont-paper"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card bg-c-pink text-white widget-visitor-card">
                    <div class="card-block-small text-center">
                        <h6>Contas Pagar</h6>
                        <h5>R$@ViewBag.ContasPagar</h5>
                        <i class="icofont icofont-paper"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @if (@ViewBag.Saldo < 0)
            {
                <div class="col-lg-12">
                    <div class="card bg-c-pink text-white widget-visitor-card">
                        <div class="card-block-small text-center">
                            <h3>Valor Total</h3>
                            <h2>R$@ViewBag.Saldo</h2>
                            <i class="icofont icofont-paper"></i>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-lg-6">
                    <div class="card bg-c-green text-white widget-visitor-card">
                        <div class="card-block-small text-center">
                            <h3>Valor Total</h3>
                            <h2>R$@ViewBag.Saldo</h2>
                            <i class="icofont icofont-paper"></i>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr />
    </div>

    <hr />
    <br />
    <br />
    <div class="col-7">
        <div class="col-6">
            <div class="card feed-card">
                <div class="card-block p-t-0 p-b-0">
                    <div class="row">
                        <div class="col-4 bg-c-yellow border-feed">
                            <i class="icofont icofont-logout f-40"></i>
                        </div>
                        <div class="col-8">
                            <div class="p-t-30 p-b-30">
                                <h2 class="f-w-400 m-b-10">@ViewBag.Saida</h2>
                                <p class="text-muted m-0">Total de <span class="text-c-pink f-w-600">saídas</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card feed-card">
                <div class="card-block p-t-0 p-b-0">
                    <div class="row">
                        <div class="col-4 bg-c-green border-feed">
                            <i class="icofont icofont-login f-40"></i>
                        </div>
                        <div class="col-8">
                            <div class="p-t-30 p-b-30">
                                <h2 class="f-w-400 m-b-10">@ViewBag.Entrada</h2>
                                <p class="text-muted m-0">Total de <span class="text-c-green f-w-600">entradas</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-6">
    <div class="card feed-card">
        <div class="card-block p-t-0 p-b-0">
            <div class="row">
                <div class="col-4 bg-c-green border-feed">
                    <i class="icofont icofont-login f-40"></i>
                </div>
                <div class="col-8">
                    <div class="p-t-30 p-b-30">
                        <h2 class="f-w-400 m-b-10">@ViewBag.Data</h2>
                        <p class="text-muted m-0">Total de <span class="text-c-green f-w-600">entradas</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/css/Graficos/Graficos.css" rel="stylesheet" />