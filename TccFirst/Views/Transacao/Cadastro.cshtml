<script src="~/Scripts/Transacao/Transacao.js"></script>
<link rel="stylesheet" href="~/Content/css/Transacao/TelaCadastroTransacao.css">
<script src="~/Scripts/Transacao/tela-cadastro.js"></script>
<div class="container">
    <div class="col-12"><h2><b>Transações de Conta</b></h2></div>
    <hr />
    <a id="botao-irtabela" class="btn float-right mb-3"
       href="/Transacao/index"><i class="fa fa-backward"></i>Ir para tabela</a>
    <br />
    <br />
    <br />

    <form action="/Transacao/cadastro" method="post">

        <div class="row">
            <div class="col-6">
                <label id="fonte" class="font-weight-bold" for="campo-cadastrocontacorrente">Conta Corrente<span class="text-danger">*</span></label>
                <select name="IdCadastrosContaCorrente" id="campo" required="" class="form-control text-dark">
                    <option selected="" disabled="disabled">Selecione uma Conta</option>
                    @foreach (Model.CadastroContaCorrente cadastrosContaCorrente in ViewBag.CadastroContaCorrentes)
                    {
                        <option value="@cadastrosContaCorrente.Id">@cadastrosContaCorrente.NumeroConta</option>

                    }
                </select>
            </div>
            <div class="col-6">
                <label id="fonte" class="font-weight-bold" for="campo-historico">Historico<span class="text-danger">*</span></label>
                <select name="IdHistorico" id="campo" required="" class="form-control  text-dark">
                    <option selected="" disabled="disabled">Selecione um Historico</option>
                    @foreach (Model.Historico historico in ViewBag.Historicos)
                    {
                        <option value="@historico.Id">@historico.Descricao</option>

                    }
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <label id="fonte" class="font-weight-bold" for="campo-categoriaReceita">Categoria Receita<span class="text-danger">*</span></label>
                <select name="IdCategoriaReceita" id="campo" required="" class="form-control  text-dark">
                    <option selected="" disabled="disabled">Selecione uma Categoria Receita</option>
                    @foreach (Model.CategoriaReceita categoriaReceita in ViewBag.CategoriasReceita)
                    {
                        <option value="@categoriaReceita.Id">@categoriaReceita.TipoCategoriaReceita</option>

                    }
                </select>
            </div>
            <div class="col-6">
                <label id="fonte" class="font-weight-bold" for="campo-categoriaDespesa">Categoria Despesa<span class="text-danger">*</span></label>
                <select name="IdCategoriaDespesa" id="campo" required="" class="form-control  text-dark">
                    <option selected="" disabled="disabled">Selecione uma Categoria Despesa</option>
                    @foreach (Model.CategoriaDespesa categoriaDespesa in ViewBag.CategoriasDespesa)
                    {
                        <option value="@categoriaDespesa.Id">@categoriaDespesa.TipoCategoriaDespesa</option>

                    }
                </select>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <lable id="fonte" for="contacorrente-campo-tipopagamento">Tipo Pagamento<span class="text-danger">*</span></lable>
                <select id="campo" name="tipopagamento" class="form-control" required>
                    <option disabled="disabled" selected="selected">Selecione uma forma de pagamento</option>
                    <option id="Dinheiro">Dinheiro</option>
                    <option id="CartaoDebito">Cartão de Débito</option>
                    <option id="CartaoCredito">Cartão de Crédito</option>
                </select>
            </div>

            <div class="col-4">
                <lable id="fonte" for="contacorrente-campo-valor">Valor<span class="text-danger">*</span></lable>
                <input type="text" id="campo" name="valor" class="form-control" required />
            </div>
            <div class="col-4">
                <lable id="fonte" for="contacorrente-campo-documento">Documento<span class="text-danger">*</span></lable>
                <input type="text" id="campo" name="documento" class="form-control" required />
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-6">
                <lable id="fonte" for="campo-datalancamento">Data Lançamento<span class="text-danger">*</span></lable>
                <input type="date" id="campo" name="datalancamento" class="form-control" required="" />
            </div>

            <div class="col-6">
                <lable id="fonte" for="campo-datarecebimento">Data Recebimento<span class="text-danger">*</span></lable>
                <input type="date" id="campo" name="datarecebimento" class="form-control" required />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <label id="fonte" for="campo-descricaotransacao">Descrição<span class="text-danger">*</span></label>
                <textarea type="text" id="campo" name="descricaotransacao" class="form-control" required></textarea>
            </div>
        </div>
        <br />
        <div class="modal-footer">
            <button id="botao-cadastrar" class="btn float-right mt-3" type="submit"><i class="fa fa-save"></i> Cadastrar</button>
        </div>

    </form>
</div>


<input type="radio" value="0" name="numero" checked> Zero
<input type="radio" value="1" name="numero"> Um
<input type="radio" value="2" name="numero"> Dois
<div id="campo-escondido">
    Número ímpar, entre outro dado:
    <input type="text" name="nome" value="" />
</div>

<script src="~/Scripts/Transacao/tela-cadastro.js"></script>
