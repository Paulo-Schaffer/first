

@{
    ViewBag.Title = "RelatorioCaixa";
}


<h2><b>Relatorio de Caixa</b></h2>
<hr />
<div class="form-group">
    <label for="filtro-historico"><b>Historico</b></label>
    <select class="form-control border-dark"     id="filtro-historico">
        <option value="0">Todos</option>
    </select>
</div>

<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label for="filtro-documento"><b>Descrição</b></label>
            <input type="text" id="filtro-descricao" class=" form-control "/>
        </div>
    </div>
    <div class="col-6">
        <div clas="form-group">
            <label class="filtro-valor"><b>Valor</b></label>
            <input type="text" id="filtro-valor" class=" form-control "/>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label for="filtro-data-inicial"><b>Data Incial do Lançamento</b></label><br />
            <input type="date" id="filtro-data-inicial" class=" form-control " />
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            <label for="filtro-data-final"><b>Data Final do Lançamento</b></label><br />
            <input type="date" id="filtro-data-final" class=" form-control " />
        </div>
    </div>
</div>
<br />

<table id="relatorio-conta-caixa" class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Documento</th>
            <th>Valor</th>
            <th>Forma de Pagamento</th>
            <th>Data de Lançamento</th>
            <th>Historico</th>

        </tr>
    </thead>
</table>
@section js{
    <script src="~/Scripts/Relatorio/relatorio-caixa.js"></script>
}
<link href="~/Content/css/Relatorios/RelatorioCaixa.css" rel="stylesheet" />