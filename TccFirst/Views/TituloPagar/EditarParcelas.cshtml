<div class="row">
    <div class="col-6">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <span id="fonte-parcelas" class="font-weight-bold">Quantidade de Parcelas:</span>
                    <span>@ViewBag.TituloPagar.QuantidadeParcela</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <span id="fonte-valortotal" class="font-weight-bold">Valor Total:</span>
                    <span>R$ @ViewBag.TituloPagar.ValorTotal</span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6">
        <button type="button" id="gerar-parcelas" class="btn btn-info float-right mb-3">
            <i class="fa fa-history"></i>Gerar Parcelas
        </button>
    </div>
</div>

<table id="parcelasPagar-tabela" class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Data Vencimento</th>
            <th>Data Pagamento</th>
            <th>Valor</th>
            <th>Status</th>
            <th>Ação</th>
        </tr>
    </thead>
</table>

<div id="modal-parcelasPagar" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Parcelas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label id="fonte-pagamento" form="parcelasPagar-campo-data-pagamento">Data Pagamento<span class="text-danger">*</span></label>
                            <input type="date" id="parcelasPagar-campo-data-pagamento" class="form-control" name="DataPagamento" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="parcelasPagar-botao-salvar" class="btn float-right mt-3" type="submit" data-dismiss="modal"><i class="fa fa-save"></i> Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section js{
    <script src="~/Scripts/TituloPagar/titulo-pagar-editar.js"></script>
}

<link href="~/Content/css/TituloPagar/TelaEditarTituloPagar.css" rel="stylesheet" />
