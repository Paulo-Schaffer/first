<div class="container container-fluid">
    <h2><b>Cadastro de Título Receber</b></h2>
    <hr />
    <div>
        <a id="botao-irtabela" class="btn float-right form-group"
           href="/TituloReceber/index"><i class="fa fa-backward"></i>Ir para tabela</a>
    </div>
    <br />

    <div class="row">
        <div class="col-12">
            <div class="form-check-inline ml-3 mr-3 mb-3">
                <input type="radio" id="tituloReceber-campo-tipo-pessoa-fisica"
                       name="tituloReceber-campo-tipo-pessoa" class="form-check-input" />
                <label id="fonte-pessoa-fisica" for="tituloReceber-campo-tipo-pessoa-fisica"
                       class="form-check-label" style="
    padding-left: 4px;
    padding-bottom: 3px;
">Pessoa Física</label>
            </div>
            <div class="form-check-inline">
                <input type="radio" id="tituloReceber-campo-tipo-pessoa-juridica"
                       name="tituloReceber-campo-tipo-pessoa" class="form-check-input" />
                <label id="fonte-pessoa-juridica" for="tituloReceber-campo-tipo-pessoa-juridica"
                       class="form-check-label" style="
    padding-left: 4px;
    padding-bottom: 4px;
">Pessoa Jurídica</label>
            </div>
        </div>
    </div>
    <form action="/tituloreceber/cadastro" method="post">
        <div class="row">
            <div class="col-12" id="tituloReceber-pessoa-fisica">
                <div class="form-group">
                    <label id="fonte-pessoa-fisica" for="tituloReceber-campo-pessoa-fisica">Pessoa Física<span class="text-danger">*</span></label>
                    <select class="form-control" id="tituloReceber-campo-pessoa-fisica" name="idClientePessoaFisica">
                        <option disabled selected>Selecione uma Pessoa Fisica</option>
                    </select>
                </div>
            </div>

            <div class="col-12" id="tituloReceber-pessoa-juridica">
                <div class="form-group">
                    <label id="fonte-pessoa-juridica" for="campo-tituloreceber-pessoaJuridica">Pessoa Jurídica<span class="text-danger">*</span></label>
                    <select class="form-control" id="tituloReceber-campo-pessoa-Juridica" name="IdClientePessoaJuridica">
                        <option disabled selected>Selecione uma Pessoa Juridica</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label id="fonte-categoria" for="campo-tituloReceber-categoria-receita" mas>Categoria Receita<span class="text-danger">*</span></label>
                    <select class="form-control" id="tituloReceber-campo-categoria-Receita" name="IdCategoriaReceita"></select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label id="fonte-status" for="titulo-receber-campo-status">Status<span class="text-danger">*</span></label>
                    <select class="form-control" id="tituloReceber-campo-status" name="Status">
                        <option disabled selected>Selecione um status</option>
                        <option value="Pendente">Pendente</option>
                        <option value="Pago">Pago</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label id="fonte-lancamento" for="campo-tituloReceber-data-lancamento" mas>Data de Lançamento<span class="text-danger">*</span></label>
                    <input type="date" id="tituloReceber-campo-data-lancamento" class="form-control" name="DataLancamento" />
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label id="fonte-recebimento" for="campo-tituloReceber-data-recebimento" mas>Data de Recebimento<span class="text-danger">*</span></label>
                        <input type="date" id="tituloReceber-campo-data-recebimento" class="form-control" name="DataRecebimento" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label id="fonte-vencimento" form="campo-titulo-receber-campo-data-vencimento" mas>Data de Vencimento<span class="text-danger">*</span></label>
                        <input type="date" id="tituloReceber-campo-data-vencimento" class="form-control" name="DataVencimento" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label id="fonte-parcela" for="campo-titulo-campo-quantidadeParcelas" mas>Quantidade de Parcelas<span class="text-danger">*</span></label>
                    <input type="number" id="tituloReceber-campo-quantidade-Parcelas" class="form-control" name="QuantidadeParcela" />
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label id="fonte-valor" for="campo-tituloReceber-valor-total" mas>Valor Total<span class="text-danger">*</span></label>
                    <input type="text" id="tituloReceber-campo-valor-total" class="form-control" name="ValorTotal" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label id="fonte-descricao" for="campo-tituloReceber-descricao" mas>Descrição<span class="text-danger">*</span></label>
            <textarea class="form-control" id="tituloReceber-campo-descricao" name="Descricao" rows="3"></textarea>
        </div>
        <button id="botao-salvar" class="btn float-right mt-3" type="submit"><i class="fa fa-save"></i> Salvar</button>
    </form>
</div>
@section js{
    <script src="~/Scripts/TituloReceber/titulo-receber-cadastro.js"></script>
    <script src="~/Scripts/TituloReceber/titulo-receber-editar.js"></script>
}

<link rel="stylesheet" href="~/Content/css/TituloReceber/TelaCadastroTituloReceber.css" />

